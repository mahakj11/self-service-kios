package com.example.foodapp;

import android.content.Intent;

import android.os.Bundle;

import android.view.View;

import android.widget.Button;

import android.widget.EditText;

import android.widget.TextView;

import androidx.appcompat.app.AppCompatActivity;

public class MainActivity2 extends AppCompatActivity {

private TextView totalAmountTextView;

private TextView totalAmountValueTextView;

private EditText tipEditText;

private Button finalButton;
@Override

protected void onCreate(Bundle savedInstanceState) {

super.onCreate(savedInstanceState);

setContentView(R.layout.activity_main2);

totalAmountTextView = findViewById(R.id.total_amount_text_view);

totalAmountValueTextView = findViewById(R.id.total_amount_value_text_view);

tipEditText = findViewById(R.id.tip_edit_text);

finalButton = findViewById(R.id.final_button);

// Get the total amount from the intent

Intent intent = getIntent();

int totalAmount = intent.getIntExtra("TOTAL_AMOUNT", 0);

// Display the total amount

totalAmountValueTextView.setText(String.valueOf(totalAmount));

// Set up the final button click listener

finalButton.setOnClickListener(new View.OnClickListener() {
@Override

public void onClick(View v) {

// Get the tip percentage

try {

double tip = Double.parseDouble(tipEditText.getText().toString());

// Calculate the tip amount

double tipAmount = totalAmount+tip;

// Calculate the final amount

double finalAmount = totalAmount + tipAmount;

Intent intent = new Intent(MainActivity2.this, MainActivity3.class);

intent.putExtra("FINAL_AMOUNT", finalAmount); // Pass the final amount

startActivity(intent);

} catch (NumberFormatException e) {

throw new RuntimeException(e);

}

}

});

}

}
